<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/backarrow_icon"
                android:id="@+id/mGoBackIcon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="bottom"
                android:text="Lost Leblanc"
                android:textSize="16dp"
                android:textStyle="bold"  />
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/but"
                    >
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:id="@+id/unsubscribe"
                        android:text="@string/subscribe"
                        android:background="#D1D0D0"

                        android:layout_alignParentRight="true"
                        />
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:id="@+id/subscribe"
                        android:text="@string/subscribe"
                        android:background="@color/youtubeColor"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/but"

                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:gravity="right"
                    >
                    <TextView
                        android:layout_width="156dp"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:text="@string/subscribe_number"/>
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:gravity="right"
                        android:layout_gravity="center"
                        android:id="@+id/subscribeNumber"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/channel3_Rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>